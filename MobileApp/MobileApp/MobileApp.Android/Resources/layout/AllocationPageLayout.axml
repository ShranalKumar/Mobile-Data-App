    <ScrollView
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="match_parent"
        p1:layout_height="match_parent"
        p1:id="@+id/ScrollableLayout"
        p1:layout_below="@id/DataDetailsTextLayout"
        p1:fadingEdgeLength="40dp"
        p1:requiresFadingEdge="vertical">
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:paddingLeft="10dp"
            p1:paddingRight="10dp">
            <LinearLayout
                p1:orientation="vertical"
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:layout_width="match_parent"
                p1:id="@+id/UserDataAllocationList"
                p1:layout_height="wrap_content" />
            <LinearLayout
                p1:orientation="vertical"
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:id="@+id/SendButtonLayout"
                p1:layout_width="match_parent"
                p1:layout_height="match_parent"
                p1:paddingTop="25dp"
                p1:paddingBottom="25dp"
                p1:paddingLeft="45dp"
                p1:paddingRight="45dp"
                p1:layout_alignParentBottom="true">
                <Button
                    p1:id="@+id/SaveButton"
                    p1:background="@drawable/roundedborder"
                    p1:textColor="@color/foreground_material_dark"
                    p1:layout_width="match_parent"
                    p1:layout_height="wrap_content"
                    p1:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
